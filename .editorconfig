; EditorConfig is awesome: http://EditorConfig.org
; top-most EditorConfig file
root = true

; Unix-style
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.neon]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2
