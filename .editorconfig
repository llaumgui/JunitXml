; EditorConfig is awesome: http://EditorConfig.org
; top-most EditorConfig file
root = true

; Unix-style
[*]
end_of_line = lf
charset = utf-8

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[*.neon]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
